<div class="row justify-content-md-center display-4">
Welcome, <%= User.find(session[:user_id]).username.capitalize%>
</div>
<hr>
<%= render "posts/all" %>
</div>


<% else %>

<div class="container-fluid" style="background-image: url('/Users/danny/Downloads/Login_v5/images/bg-01.jpg')"> <%# rgba(236, 236, 236)%>
