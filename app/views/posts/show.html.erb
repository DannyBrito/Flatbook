<h1>SHOW FOR POST</h1>

<%= link_to @post.user.username, user_path(@post.user) %> says:<br><%= @post.content %>

<hr>
<%= form_tag post_path(@post),method: :delete do %>
    <%= submit_tag "DELETE" %>
<% end %>
<br>
<%= form_tag edit_post_path(@post),method: :get do %>
    <%= submit_tag "EDIT" %>
<% end %>