<div class="container">
  <div class="row">
    <div class="col-sm">
        <% if @post.img_url%>
            <%= image_tag @post.img_url, class: "pimage"%>
        <% end%><br>

    </div>
    <div class="col-sm">

        <hr>
        <%= link_to @post.user.username, user_path(@post.user) %><br>
        <%= @post.content %>
        <br>
        <br>
        <br>

        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <%= form_tag post_path(@post),method: :get do %>
                        <%= submit_tag "Comment" %>
                    <% end %>
                </div>
                <div class="col-sm">
                    <%= form_for(@like) do |f| %>
                        <%= f.hidden_field :post_id, :value => @post.id %>
                        <%= f.hidden_field :user_id, :value => @logged_in_user.id %>
                        <%= f.submit "Like" %>
                        <% end %><br>
                </div>
            </div>
        </div>

        Likes: <%= @post.likes.count %> Comments: <%= @post.comments.count %><br>
        ----------------------------------------------<br>
        <% @post.comments.each do |comment| %>
            <%= comment.user.username %> said:  
            <%= comment.content %><br>
            <% end %>

        <%= form_for(@comment) do |f| %>
            <%= f.hidden_field :post_id, :value => @post.id %>
            <%= f.hidden_field :user_id, :value => @logged_in_user.id %>
            <%= f.text_field :content %>
            <%= f.submit "Comment" %>
            <% end %>
        <br>
        <% if @logged_in_user == @post.user %>
            <%= form_tag post_path(@post),method: :delete do %>
                <%= submit_tag "DELETE" %>
            <% end %>
            <br>
            <%= form_tag edit_post_path(@post),method: :get do %>
                <%= submit_tag "EDIT" %>
            <% end %>
        <% end %>

    </div>
  </div>
</div>