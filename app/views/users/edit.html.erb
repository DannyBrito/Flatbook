    <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :mood %>
        <%= f.text_field :mood, class:"form-control" %>
    </div>
     <div class="form-group">
        <%= f.label :hobby %>
        <%= f.text_field :hobby, class:"form-control" %>
    </div>
     <div class="form-group">
        <%= f.label :food %>
        <%= f.text_field :food, class:"form-control" %>
    </div>
     <div class="form-group">
        <%= f.label :music %>
        <%= f.text_field :music, class:"form-control" %>
    </div>
     <div class="form-group">
        <%= f.label :job %>
        <%= f.text_field :job, class:"form-control"%>
    </div>
        <%= f.submit "Update Profile", class: "btn btn-primary" %>
<% end %>
</div>