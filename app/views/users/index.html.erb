<h2 class="text-center"> All Users </h2>

<div class="container">
<div class="row justify-content-md-center">
 <% @users.each do |user| %>
    <div class="card" style="width: 18rem;">
  <img  src="<%= (user.img_url && !user.img_url.empty?)? user.img_url : "https://static.thenounproject.com/png/630729-200.png" %>"class="card-img-top imgp" alt="user_picture">
  <div class="card-body">
    <%= link_to user.username, user_path(user),class:"card-title" %>
    <p class="card-text"> <%= user.mood ? "I'm #{user.mood}" : "No comment" %></p>
  </div>
</div>
 <% end%>
</div>
</div>